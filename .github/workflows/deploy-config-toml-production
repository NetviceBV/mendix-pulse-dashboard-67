name: Deploy Config to Production

on:
  workflow_dispatch:  # Manual trigger

jobs:
  deploy-config:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout main branch
        uses: actions/checkout@v3
        with:
          ref: main
          token: ${{ secrets.GH_PAT }}
      
      - name: Setup Supabase CLI
        uses: supabase/setup-cli@v1
        with:
          version: latest
      
      - name: Replace Dev Project ID in config.toml
        run: |
          # Replace dev project ID with production in config.toml
          if [ -f "supabase/config.toml" ]; then
            sed -i 's/hfmeoajwhaiobjngpyhe/${{ secrets.SUPABASE_PROD_PROJECT_ID }}/g' supabase/config.toml
            echo "=== Updated config.toml ==="
            cat supabase/config.toml
          else
            echo "ERROR: supabase/config.toml not found"
            exit 1
          fi
      
      - name: Link to Production Project
        run: supabase link --project-ref ${{ secrets.SUPABASE_PROD_PROJECT_ID }}
        env:
          SUPABASE_ACCESS_TOKEN: ${{ secrets.SUPABASE_ACCESS_TOKEN }}
      
      - name: Deploy Functions (includes config)
        run: supabase functions deploy --project-ref ${{ secrets.SUPABASE_PROD_PROJECT_ID }}
        env:
          SUPABASE_ACCESS_TOKEN: ${{ secrets.SUPABASE_ACCESS_TOKEN }}
